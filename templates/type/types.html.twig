{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}
{% block monTitre %}
    Liste de tous les types
  
{% endblock %}
{% block body %}
    <div class="row ">
        {% for type in types %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-6 col-md-4 col-lg-2">
                        <img class="perso_imgType img-fluid" src="{{ asset('images/types/' ~ type.image) }}" alt="">
                    </div>
                    <div class="col">
                            <div><a href="{{ path('afficher_list_aliment_types',{'id':type.id}) }}" class="btn btn-primary">{{ type.libelle }}</a></div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
