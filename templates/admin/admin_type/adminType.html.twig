{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}
{% block monTitre %}Administration type{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

    <a class="btn btn-success" href="">Ajouter</a>
    <table class="table">
        <tr class="table-primary">
            <td>Image</td>
            <td>Type</td>
            <td>Actions</td>
        </tr>
        {% for type in types %}
            <tr>
                <td><img src="{{ asset('images/types/' ~ type.image) }}" class="perso_imgAlimentAdmin" alt=""></td>
                <td><strong>{{ type.libelle }}</strong></td>
                <td>
                    <a class="btn btn-warning" href="">Modifier</a>
                    <form method="POST" style="display:inline-block" action="" onsubmit="return confirm('Confirmer la suppression ?')">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="_token" value="">
                        <input type="submit" class="btn btn-danger" value="supprimer">
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}






