{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}
{% block monTitre %}
    Liste de tous les aliments par type
    {# {% if isCalorie %}
        avec moins de 50 calories
    {% elseif isGlucide %}   
        avec moins de 5 glucides  #}
    {# {% endif %} #}
{% endblock %}
{% block body %}
<br>

<br>
    <div class="row">
        {% for aliment in types.libelle %}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3 mx-auto" style="maw-width:20rem">
                <div class="card-header text-center">
                    <img src="{{ asset('images/aliments/' ~ aliment.image) }}" class="perso_imgAliment card-img-top" alt="">
                </div>
                <div class="card-body">
                    <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{ aliment.nom }}</h3>
                    <p class="card-text">
                        <h4 class="text-center">Prix (Kilo) : {{ aliment.prix }} €</h4>
                        <h5 class="text-center text-success">Type : {{ aliment.type.libelle }} </h5>
                        <table class="table text-center">
                            <tr class="table-primary">
                                <td>Propriété</td>
                                <td>Valeur (100g)</td>
                            </tr>
                            <tr>
                                <td>Calories</td>
                                <td>{{ aliment.calorie }}</td>
                            </tr>
                            <tr>
                                <td>Protéines</td>
                                <td>{{ aliment.proteine }}</td>
                            </tr>
                            <tr>
                                <td>Glucides</td>
                                <td>{{ aliment.glucide }}</td>
                            </tr>
                            <tr>
                                <td>Lipides</td>
                                <td>{{ aliment.lipide }}</td>
                            </tr>
                        </table>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
